<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net5.0;netcoreapp3.1;net6.0</TargetFrameworks>

    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackAsTool>true</PackAsTool>

    <Product>Project Binary Reference Checker</Product>
    <PackageId>Konfidence.Project-BinaryReferences</PackageId>
    <AssemblyName>Project-BinaryReferences</AssemblyName>
    
    <Title>Project-BinaryReferences</Title>
    <Description>Tool for resolving conflicting project and binary references in a solution</Description>

    <PackageTags>project reference binary</PackageTags>

  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\ToolClasses\ToolClasses.csproj" />
  </ItemGroup>

</Project>
